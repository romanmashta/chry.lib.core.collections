@inherits StyleComponentBase

<style>
    .object-sort-visually-hidden {
        top: 20px;
        clip: rect(0 0 0 0);
        width: 1px;
        border: 0;
        height: 1px;
        margin: -1px;
        padding: 0;
        overflow: hidden;
        position: absolute;
    }
    
    .TableRow-Body{
        cursor: pointer;
    }
    
    .Collection-Container{
    }
    
    .Collection-Actions{
        padding-top: calc(var(--theme-spacing, 8) * 3px);
        display: flex;
        justify-content: flex-end;
    }    
    
    .Collection-Chip{
        padding: calc(var(--theme-spacing, 8) * 0.5px) calc(var(--theme-spacing, 8) * 1px);
        border-radius: 20px;
        display: inline-flex;
        align-items: center;
    }
    
    .Collection-Chip .MaterialIcon-Root{
        padding-right: calc(var(--theme-spacing, 8) * 0.5px);
    }
    
    .Collection-Chip-Yellow{
        color: var(--theme-palette-secondary-contrast-text, #fff);
        background-color: var(--theme-palette-secondary-main, rgb(220, 0, 78));
    }
    
    .Collection-Chip-Grey{
        color: var(--theme-palette-secondary-contrast-text, #fff);
        background-color: var(--theme-palette-action-selected, rgba(0, 0, 0, 0.14));
    }            

    .Collection-Chip-Red{
        color: var(--theme-palette-error-contrast-text, #fff);
        background-color: var(--theme-palette-error-dark, #d32f2f);
    }
    
    .Collection-Chip-Green{
        color: var(--theme-palette-error-contrast-text, #fff);
        background-color: var(--theme-palette-success-dark, #388e3c);
    }
    
    .Collection-Chip-Blue{
        color: var(--theme-palette-info-contrast-tex, #fff);
        background-color: var(--theme-palette-info-dark, #d32f2f);
    }                                          
</style>